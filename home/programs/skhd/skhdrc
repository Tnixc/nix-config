# change layout
alt - e : yabai -m space --layout bsp
alt - s : yabai -m space --layout float

# floating windows
alt + shift - space : yabai -m window --toggle float
ctrl + alt + cmd + shift - n  : yabai -m window --toggle float&&yabai -m window --grid 12:12:1:1:10:10

# enter fullscreen mode for the focused container
ctrl + alt + cmd + shift - f : yabai -m window --toggle zoom-fullscreen
####### Shortcut Hotkeys #############

# Launch terminal
ctrl + alt + cmd + shift - return : kitty --single-instance -d ~

# restart Yabi, SpaceBar, and SKHD
alt + shift - r : killall yabai&&yabai --start-service&&skhd --reload

# Rotate workspace clockwise
ctrl + alt + cmd + shift - 0x32 : yabai -m space --rotate 90

# focus windows
ctrl + alt + cmd + shift - q : yabai -m window --focus next || yabai -m window --focus first
ctrl + alt + cmd + shift - e : yabai -m window --focus prev || yabai -m window --focus last

# window resizing
ctrl + alt + cmd + shift - w : yabai -m window --resize top:0:-20 || yabai -m window --resize bottom:0:-20
ctrl + alt + cmd + shift - s : yabai -m window --resize top:0:20 || yabai -m window --resize bottom:0:20
ctrl + alt + cmd + shift - a : yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0
ctrl + alt + cmd + shift - d : yabai -m window --resize left:20:0 || yabai -m window --resize right:20:0

ctrl + alt + cmd + shift - h : yabai -m window --focus west
ctrl + alt + cmd + shift - j: yabai -m window --focus south
ctrl + alt + cmd + shift - k: yabai -m window --focus north
ctrl + alt + cmd + shift - l: yabai -m window --focus east

# Switch spaces and move windows
ctrl - 1: yabai -m space --focus 1
ctrl - 2: yabai -m space --focus 2
ctrl - 3: yabai -m space --focus 3
ctrl - 4: yabai -m space --focus 4
ctrl - 5: yabai -m space --focus 5
ctrl - 6: yabai -m space --focus 6
ctrl - 7: yabai -m space --focus 7
ctrl - 8: yabai -m space --focus 8
ctrl - 9: yabai -m space --focus 9
ctrl - 0: yabai -m space --focus 10

ctrl + shift - 1: yabai -m window --space 1 && yabai -m space --focus 1
ctrl + shift - 2: yabai -m window --space 2 && yabai -m space --focus 2
ctrl + shift - 3: yabai -m window --space 3 && yabai -m space --focus 3
ctrl + shift - 4: yabai -m window --space 4 && yabai -m space --focus 4
ctrl + shift - 5: yabai -m window --space 5 && yabai -m space --focus 5
ctrl + shift - 6: yabai -m window --space 6 && yabai -m space --focus 6
ctrl + shift - 7: yabai -m window --space 7 && yabai -m space --focus 7
ctrl + shift - 8: yabai -m window --space 8 && yabai -m space --focus 8
ctrl + shift - 9: yabai -m window --space 9 && yabai -m space --focus 9
ctrl + shift - 0: yabai -m window --space 10 && yabai -m space --focus 10

fn - h : /opt/homebrew/bin/sendkeys -d 0 -i 0 --characters '<c:left>'
fn - j : /opt/homebrew/bin/sendkeys -d 0 -i 0 --characters '<c:down>'
fn - k : /opt/homebrew/bin/sendkeys -d 0 -i 0 --characters '<c:up>'
fn - l : /opt/homebrew/bin/sendkeys -d 0 -i 0 --characters '<c:right>'
