      "shift-home": [
        "editor::SelectToBeginningOfLine",
        {
          "stop_at_soft_wraps": true
        }
      ],
      "ctrl-shift-a": [
        "editor::SelectToBeginningOfLine",
        {
          "stop_at_soft_wraps": true
        }
      ],
      "cmd-shift-right": [
        "editor::SelectToEndOfLine",
        {
          "stop_at_soft_wraps": true
        }
      ],
      "shift-end": [
        "editor::SelectToEndOfLine",
        {
          "stop_at_soft_wraps": true
        }
      ],
      "ctrl-shift-e": [
        "editor::SelectToEndOfLine",
        {
          "stop_at_soft_wraps": true
        }
      ],
      "ctrl-v": [
        "editor::MovePageDown",
        {
          "center_cursor": true
        }
      ],
      "alt-v": [
        "editor::MovePageUp",
        {
          "center_cursor": true
        }
      ],
      "ctrl-cmd-space": "editor::ShowCharacterPalette"
